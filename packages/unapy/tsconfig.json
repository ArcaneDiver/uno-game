{
	"rootDir": "src",
	"exclude": [
		"../unoenty/**"
	],
	"compilerOptions": {
		"types": [
			"node"
		],
		"outDir": "dist",
		"esModuleInterop": true,
    "rootDir": "src",
    "target": "es6",
    "lib": [
			"ES2020"
		],
    "allowJs": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
		}
	}
}